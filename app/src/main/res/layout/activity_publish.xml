<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publish"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/title"
        layout="@layout/layout_base_title" />

    <EditText
        android:id="@+id/et_publish_msg"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_below="@id/title"
        android:background="@null"
        android:gravity="left|top"
        android:hint="发布您的内容"
        android:padding="20dp"
        android:textColorHint="#8E8E93"
        android:textSize="18sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/et_publish_msg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#D9D8DE" />

    <ycy.ccyy.yueyavillage.widget.ImagePicker
        android:id="@+id/ip_imagePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></ycy.ccyy.yueyavillage.widget.ImagePicker>

</RelativeLayout>