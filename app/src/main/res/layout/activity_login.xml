<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_base_title" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ycy_login" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/iv_login_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/account_unselected" />

        <EditText
            android:id="@+id/et_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_login_account"
            android:layout_alignBottom="@id/iv_login_account"
            android:layout_toLeftOf="@id/iv_login_account_clear"
            android:layout_toRightOf="@id/iv_login_account"
            android:background="@null"
            android:hint="@string/hint_input_account"
            android:inputType="number"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/selection_color" />

        <ImageView
            android:id="@+id/iv_login_account_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_login_account"
            android:layout_alignBottom="@id/iv_login_account"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/account_clear"
            android:visibility="invisible" />

        <View
            android:id="@+id/divder"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/iv_login_account_clear"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#cccccc" />

        <ImageView
            android:id="@+id/iv_login_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divder"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/pwd_unselected" />

        <EditText
            android:id="@+id/et_login_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_login_pwd"
            android:layout_alignBottom="@id/iv_login_pwd"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@id/iv_login_pwd"
            android:background="@null"
            android:hint="@string/hint_input_pwd"
            android:inputType="textPassword"
            android:textColorHint="#cccccc"
            android:textCursorDrawable="@drawable/selection_color" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:text="@string/login_forget_pwd"
        android:textColor="@color/ccyy" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/login_btn"
        android:enabled="false"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_to_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/white"
        android:text="注册"
        android:textColor="@color/ccyy"
        android:textSize="16sp" />
</LinearLayout>