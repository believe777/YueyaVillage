<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f6f7"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/layout_base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_promiss_pool_tip"
        android:layout_below="@id/title"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ycy.ccyy.yueyavillage.widget.PromisePoolPager
            android:id="@+id/vp_promise_pool_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ycy.ccyy.yueyavillage.widget.PromisePoolPager>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_promiss_pool_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="不可逆向滑动" />
</RelativeLayout>